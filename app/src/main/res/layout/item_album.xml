<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@color/colorbackgroundBubrule">


        <ImageView
            android:id="@+id/img_album"
            android:layout_width="213dp"
            android:layout_height="152dp"


            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/album" />

        <TextView
            android:id="@+id/album_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="174dp"
            android:ellipsize="marquee"
            android:focusable="true"

            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Last added"
            android:textColor="#000000"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/img_album"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="105dp"

            android:layout_marginEnd="28dp"
            android:background="@drawable/ic_play"
            android:scaleType="fitXY" />


        <!-- <ImageButton
             android:id="@+id/play_list_image_btn"
             android:layout_width="20dp"
             android:layout_height="30dp"
             android:layout_alignParentTop="true"
             android:layout_alignParentEnd="true"
             android:layout_marginTop="208dp"
             android:layout_marginEnd="22dp"
             app:srcCompat="@drawable/ic_play_list_setteing" />-->
    </RelativeLayout>
</android.support.v7.widget.CardView>